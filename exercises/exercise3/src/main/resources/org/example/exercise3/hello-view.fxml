<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="174.0" prefWidth="324.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.exercise3.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Calculator" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <TextField fx:id="numberOne" prefHeight="26.0" prefWidth="60.0">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </TextField>
         <TextField fx:id="numberTwo" prefWidth="60.0">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </TextField>
      </children>
   </HBox>

  <Label fx:id="resultText" />
   <HBox alignment="CENTER" prefHeight="74.0" prefWidth="284.0">
      <children>
         <Button id="plus_button" mnemonicParsing="false" onAction="#onPlusButtonClick" text="+">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button id="minus_button" mnemonicParsing="false" onAction="#onMinusButtonClick" text="-">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button id="times_button" mnemonicParsing="false" onAction="#onTimesButtonClick" text="*">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button id="divide_button" mnemonicParsing="false" onAction="#onDivideButtonClick" text="/">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <Button mnemonicParsing="false" onAction="#onClearButtonClick" text="clear" />
</VBox>
